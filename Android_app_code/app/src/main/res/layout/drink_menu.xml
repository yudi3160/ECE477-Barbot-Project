<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yudi.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please order your desired drink" />

    <Button
        android:text="Arizona Sunset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:id="@+id/sunset"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textColorLink="@android:color/holo_orange_dark"
        android:textSize="20dp"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/pinapple"
        android:layout_alignEnd="@+id/pinapple" />

    <Button
        android:text="Pineapple Lemonade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pinapple"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_below="@+id/sunset"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Long Island Iced Tea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iceTea"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20dp"
        android:layout_below="@+id/pinapple"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <Button
        android:text="Orange Fizz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fizz"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20dp"
        android:layout_below="@+id/iceTea"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:layout_alignRight="@+id/pinapple"
        android:layout_alignEnd="@+id/pinapple" />

    <Button
        android:text="Gabbie's Punch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/punch"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20dp"
        android:layout_below="@+id/fizz"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:layout_alignRight="@+id/fizz"
        android:layout_alignEnd="@+id/fizz" />

    <Button
        android:text="Cinderalla cocktail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cinderalla"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/punch"
        android:layout_alignRight="@+id/iceTea"
        android:layout_alignEnd="@+id/iceTea" />


</RelativeLayout>
